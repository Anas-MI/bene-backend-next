{{> header}}
{{> nav}}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Coupon List</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <table class="product_detail_table table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th class="custom-table1" style="width: 80px;">Name</th>
                        <th class="custom-table2" style="width: 190px;">Duration</th>
                        <th class="custom-table4" style="width: 80px;">Type</th>
                        <th class="custom-table5" style="width: 122px;">Percentage Off</th>
                    </tr>      
                </thead>  
                <tbody>
                    {{#each coupons as |productvalue productvkey|}}
                    <tr>
                        <td>{{productvalue.id}}</td>
                        <td>{{productvalue.duration_in_months}}
                            <div class="custom-delete-edit">   
                                {{!-- <a href="/products/combos/edit/{{productvalue._id}}"><i class="fa fa-pencil-square-o" title="Edit" aria-hidden="true"></i></a>   --}}
                                <a href="#" class="delete-coupon" data-id="{{productvalue.id}}"><i class="fa fa-trash" title="Delete" aria-hidden="true"></i></a>                                
                            </div>     
                        </td>
                         {{!-- <td>
                            {{#each productvalue.categoryid}}
                                {{this.categorytitle}}
                            {{/each}}
                        </td> --}}
                        <td>{{productvalue.duration}}</td>
                        <td>{{productvalue.percent_off}}</td>
                        
                    </tr>
                    {{/each}}    
                </tbody>
                {{!-- <tfoot>
                    <tr>
                        <th>S.no</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Sku</th>
                        <th>Type</th>
                        <th>Date</th>
                    </tr>
                </tfoot> --}}
            </table>
        </div>
    </div>
</div>
<!-- /#page-wrapper -->
{{> footer}}