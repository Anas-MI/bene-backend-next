{{> header}}
{{> nav}}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Vendors</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <table class="product_detail_table table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Vendor ID</th>
                        <th>Vendor Name</th>
                    </tr>      
                </thead>
                
                <tbody>
                    {{#each vendor as |vendors|}}
                    {{!-- {{productvalue}} --}}
                    <tr>
                        <td>{{vendors.vendorid}}</td>
                        <td>{{vendors.vendorname}}
                            <div class="custom-delete-edit">
                                <a href="/vendor/edit/{{vendors._id}}"><i class="fa fa-pencil-square-o" title="Edit" aria-hidden="true"></i></a> | 
                                <a href="/vendor/delete/{{vendors._id}}"><i class="fa fa-trash" title="Delete" aria-hidden="true"></i></a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}    
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- /#page-wrapper -->
{{> footer}}