<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Product Attributes</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-5">
                <div class="alert alert-success attributesuccess" style="display:none;"></div>
                <div class="alert alert-danger attributedanger" style="display:none;"></div>
                <form method="POST" action="/products/add-attribute" id="addattributeform" class="attributeform">
                    <h2>Add New Attribute</h2>
                    <p>Attributes let you define extra product data, such as size or color. You can use these attributes in the shop sidebar using the "layered nav" widgets.</p>
                    <div id="category-group">
                        <label>Name:</label>
                        <input class="form-control attributetitle" name="attributetitle" type="text" autocomplete="off">
                        <span class="form_error">Please Enter Attribute Name</span>
                    </div>
                    <div id="category-group">
                        <label>Slug:</label>
                        <input class="form-control attributeslug" name="attributeslug" type="text" autocomplete="off">
                    </div>
                    <br>
                    <input class="btn btn-primary attribute-add-btn" type="button" value="Add Attribute">
                </form>
                <form method="POST" action="" enctype="multipart/form-data" class="attributeform" id="edit_attribute_form" style="display:none;">
                    <div id="category-group">
                        <label>Name:</label>
                        <input class="form-control editattributename" name="attributetitle" type="text" value="" autocomplete="off">
                        <span class="form_error">Please Enter Attribute Name</span>
                    </div>
                    <div id="category-group">
                        <label>Slug:</label>
                        <input class="form-control editattributeslug" name="attributeslug" type="text" autocomplete="off">
                    </div>
                    <br>
                    <input class="btn btn-primary editattribute_btn" type="submit" value="Edit Attribute">
                </form> 
            </div>
            <div class="col-lg-7">
                <table class="product_detail_table table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th class="custom-sno-product-attribute">Sno.</th>
                            <th class="custom-name-product-attribute">Name</th>
                            <th class="custom-slug-product-attribute">Slug</th>
                            <th class="custom-terms-product-attribute">Terms</th>
                        </tr>      
                    </thead>  
                    <tbody>
                        {{#each attributes as |value key|}}
                        <tr>
                            <td>{{value.attributeid}}</td>
                            <td class="custom-table-section">
                                <p>{{value.name}}</p>
                                <div class="custom-delete-edit">
                                    <a href="javascript:void(0);" class="edit_attribute_btn" data-id="{{this._id}}"><i class="fa fa-pencil-square-o" title="Edit" aria-hidden="true"></i></a> | 
                                    <a href="javascript:void(0);" class="delete-attribute" data-id="{{this._id}}"><i class="fa fa-trash" title="Delete" aria-hidden="true"></i></a>
                                </div>
                            </td>
                            <td>{{value.slug}}</td>
                            <td><p>
                            {{#each value.terms as |termsvalue termskey|}}
                                {{termsvalue.name}},
                            {{/each}}
                            </p> 
                            <a href="/products/attribute-term/{{this._id}}" class="add-attribute-terms" data-id="{{this._id}}">Configure terms</a>
                            </td>
                        </tr>
                        {{/each}}    
                    </tbody>
                    {{!-- <tfoot>
                        <tr>
                            <th>Sno.</th>
                            <th>Name</th>
