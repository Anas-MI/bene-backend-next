{{> header}}
{{> nav}}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Referrals</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
     <div class="col-lg-12 broker_table">
                <table class="product_detail_table table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>URL</th>
                            <th>Refer URL</th>
                            <th>Converted</th>
                            <th>OrderID</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>      
                    </thead>  
                    <tbody>
                        {{#each referral as |value key|}}
                            {{!-- {{#notequal value.role "superAdmin"}} --}}
                                <tr>
                                    <td>{{value.url}}</td>
                                    <td>{{value.refer_url}}</td>
                                    <td>{{value.converted}}</td>
                                    <td>{{#if value.orderid}}<a href="/pages/orders/view/{{value.orderid}}">View Order</a>{{/if}}</td>
                                    <td>{{value.amount}}</td>
                                    <td>{{value.date}}</td>
                                     <td>
                                        {{#ifEquals value.paid false}}Not Paid{{else}}Paid{{/ifEquals}}
                                    </td>
                                    {{!-- <td>{{#if this.referalamout}}{{this.referalamout}} Rs{{else}}0 Rs{{/if}}</td>
                                    <td>{{#if this.discountbyrefnumber}}{{this.discountbyrefnumber}}{{else}}0{{/if}}</td> --}}
                                    <td><a href="/ambassador-portal/referralview/{{value._id}}" class="edit_user_btn" >View Profile</a></td>
                                   
                                </tr>
                            {{!-- {{/notequal}} --}}
                        {{/each}}    
                    </tbody>
                </table>
            </div>
</div>

