{{> header}}
{{> nav}}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Wishlist of all users</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

 

    <div class="row">
 


       <div class="col-lg-12">
            <table class="product_detail_table table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>S.no</th>
                        <th>Product Name</th>
                        <th>Sku</th>
                        <th>Username</th>
                        <th>Added on</th>
                        
                    </tr>      
                </thead>


                <tbody>
                    {{#each products as |productvalue productid|}}
                    {{!-- {{productvalue}} --}}
                    <tr>
                        <td>{{productvalue.serial}}</td>
                        <td>
				{{#ifEquals productvalue.combo 1}}{{productvalue.comboid.title}}{{else}}{{productvalue.productid.producttitle}}{{/ifEquals}}
				
                            <div class="custom-delete-edit">
                                {{!-- <a href="/wishlist/edit/{{productvalue._id}}"><i class="fa fa-pencil-square-o" title="Edit" aria-hidden="true"></i></a> --}} 
                                <a href="/wishlist/delete/{{productvalue._id}}"><i class="fa fa-trash" title="Delete" aria-hidden="true"></i></a>
                            </div>
                        </td>
                         <td>
                            {{!-- {{#each productvalue.deliverydate}}
                                {{this.categorytitle}}
                            {{/each}} --}}
                            
{{#ifEquals productvalue.combo 1}}{{productvalue.comboid.sku}}{{else}}{{productvalue.productid.sku}}{{/ifEquals}}
                        </td>
                        <td>{{productvalue.userid.email}}</td>
                        <td>{{productvalue.createdon}}</td>
                    </tr>
                    {{/each}}    
                </tbody>
                {{!-- <tfoot>
                    <tr>
                        <th>S.no</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Sku</th>
                        <th>Type</th>
                        <th>Date</th>
                    </tr>
                </tfoot> --}}
            </table>
        </div>
    </div>
</div>
<!-- /#page-wrapper -->
{{> footer}}