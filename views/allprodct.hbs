{{> header}}
{{> nav}}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">All Products</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <table class="product_detail_table table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th class="custom-table1" style="width: 80px;">S.no</th>
                        <th class="custom-table2" style="width: 190px;">Name</th>
                        <th class="custom-table3" style="width: 130px;">Category</th>
                        <th class="custom-table4" style="width: 80px;">Sku</th>
                        <th class="custom-table5" style="width: 122px;">Type</th>
                        <th class="custom-table6" style="width: 175px;">Date</th>
                    </tr>      
                </thead>  
                <tbody>
                    {{#each products as |productvalue productvkey|}}
                    <tr>
                        <td>{{productvalue.productid.id}}</td>
                        <td>{{productvalue.productid.producttitle}}
                            <div class="custom-delete-edit">   
                                <a href="/products/edit/{{productvalue._id}}"><i class="fa fa-pencil-square-o" title="Edit" aria-hidden="true"></i></a>  
                                <a href="javascript:void(0);" class="delete-product" data-id="{{productvalue._id}}"><i class="fa fa-trash" title="Delete" aria-hidden="true"></i></a>                                
                            </div>     
                        </td>
                         <td>
                            {{#each productvalue.categoryid}}
                                {{this.categorytitle}}
                            {{/each}}
                        </td>
                        <td>{{productvalue.productid.sku}}</td>
                        <td>{{productvalue.producttype}}</td>
                        <td>{{productvalue.productid.creationdate}}</td>
                    </tr>
                    {{/each}}    
                </tbody>
                {{!-- <tfoot>
                    <tr>
                        <th>S.no</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Sku</th>
                        <th>Type</th>
                        <th>Date</th>
                    </tr>
                </tfoot> --}}
            </table>
        </div>
    </div>
</div>
<!-- /#page-wrapper -->
{{> footer}}