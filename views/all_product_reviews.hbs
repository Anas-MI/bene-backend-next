{{> header}}
{{> nav}}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{pageTitle}}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <table class="product_detail_table table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>S.no</th>
                        <th>Product Name</th>
                        <th>Number of Reviews</th>
                        <th>Average Rating</th>
                        <th>&nbsp;</th>
                    </tr>      
                </thead>  
                <tbody>
                    {{#each products as |reviewvalue reviewkey|}}
                        {{#if reviewvalue.totalreviews}}
                        <tr>
                            
                            <td>{{reviewvalue.id}}</td>
                            <td>{{reviewvalue.producttitle}}</td>
                            <td>{{reviewvalue.totalreviews}}</td>
                            <td>{{reviewvalue.averagerating}}</td>
                            <td><a href="/products/reviews/{{reviewvalue._id}}">View Reviews</a></td>
                        </tr>
                        {{/if}}
                    {{/each}}    
                </tbody>                
            </table>
        </div>
    </div>
</div>
<!-- /#page-wrapper -->
{{> footer}}