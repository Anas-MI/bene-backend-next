{{> header}}
{{> nav}}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Barcodes</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <table class="product_detail_table table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>File Name</th>
                        <th>Check Digit</th>
                        <th>Number Formula</th>
                        <th>Number</th>
                        <th></th>
                    </tr>      
                </thead>
                
                <tbody>
                    {{#each barcode as |barcodes|}}
                    {{!-- {{productvalue}} --}}
                    <tr>
                        <td>{{barcodes.filename}}</td>
                        <td>{{barcodes.checkdigit}}</td>
                        <td>{{barcodes.formula}}</td>
                        <td>{{barcodes.barcode}}
                            <td>
                            <div class="custom-delete-edit">
                                <a href="/barcodes/edit/{{barcodes._id}}"><i class="fa fa-pencil-square-o" title="Edit" aria-hidden="true"></i></a>  
                                <a href="/barcodes/delete/{{barcodes._id}}"><i class="fa fa-trash" title="Delete" aria-hidden="true"></i></a>
                            </div>
                            </td>
                        </td>
                    </tr>
                    {{/each}}    
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- /#page-wrapper -->
{{> footer}}