{{> header}}
<style>
    .alert-danger {
  color: #FFF;
  background-color: #EA6153;
  border-color: #E05749;
}
</style>
<div class="container">
  <hr>
  <div class="row">
    {{message}}
     {{{flash}}}
    <div class="col-md-12">
      	<form method="POST" action="/vendor/edit/{{vendor._id}}">
                     {{#if error}}
    <hr>
    <div class="alert-danger">
    <span>{{error}}</span>
    </div>
    <hr>
    {{/if}}
          <div id="form-group">
            <label>Vendor ID</label>
            <input class="form-control" name="vendorid" type="text" value="{{vendor.vendorid}}">
          </div>
          <div id="form-group">
            <label>Vendor Name:</label>
            <input class="form-control" name="vendorname" type="text" value="{{vendor.vendorname}}">
          </div>
          <br>
          <input class="btn btn-primary" type="submit" value="Submit">
        </form>
    </div>
  </div> <!-- row -->
</div>
    {{> footer}}
  </body>
</html>
