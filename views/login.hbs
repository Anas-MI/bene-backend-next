{{> header}}
{{#if error}}
  <div class="alert alert-danger">{{error}}</div>
{{/if}}
<div class="container">
  <hr>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
			<div class="login-panel panel panel-default">
				<div class="panel-heading">
          <h3 class="panel-title">Please Sign In</h3>
        </div>
				<div class="panel-body">
					<form method="POST" action="/users/login" class="login_form_submit" id="loginform">
						<div id="form-group">
							<label>Email:</label>
							<input class="form-control" name="email" type="text">
						</div>
						<div id="form-group">
							<label>Password:</label>
							<input class="form-control" name="password" type="password">
						</div>
						<input type="hidden" name="login_form_type" value="app_backend"/>
						<br>
						<input class="btn btn-lg btn-success btn-block" type="submit" value="Submit">
      		</form>
					<div class="forget_pass_link"><a href="/users/forgetpassword">Forgot Password?</a></div>
				</div>
