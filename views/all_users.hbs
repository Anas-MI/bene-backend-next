{{> header}}
{{> nav}}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">User Management</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
     <div class="col-lg-12 broker_table">
                <table class="product_detail_table table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Phone Number</th>
                            <th>Created On</th>
                            <th>Status</th>
                            <th></th>
                            <th></th>
                        </tr>      
                    </thead>  
                    <tbody>
                        {{#each user as |value key|}}
                            {{!-- {{#notequal value.role "superAdmin"}} --}}
                                <tr>
                                    <td>{{value.email}}</td>
                                    <td>{{value.role}}</td>
                                    <td>{{value.phonenumber}}</td>
                                    <td>{{value.createdDate}}</td>
                                    <td>{{value.status}}</td>
                                    {{!-- <td>{{#if this.referalamout}}{{this.referalamout}} Rs{{else}}0 Rs{{/if}}</td>
                                    <td>{{#if this.discountbyrefnumber}}{{this.discountbyrefnumber}}{{else}}0{{/if}}</td> --}}
                                    <td><a href="/users/edit/{{value._id}}" class="edit_user_btn" >View</a></td>
                                    <td><a href="#" data-id="{{value._id}}" class="delete-user" ><i class="fa fa-trash" title="Delete" aria-hidden="true"></i></a></td>
                                </tr>
                            {{!-- {{/notequal}} --}}
                        {{/each}}    
                    </tbody>
                </table>
            </div>
</div>


    <div class="row custom-user-managment-edit">      
        <div class="col-lg-12">
            <div class="col-lg-12">
                <div class="alert alert-success brokersuccess" style="display:none;"></div>
                <div class="alert alert-danger brokerdanger" style="display:none;"></div>
                
                    
                    <h3>Create New User</h3>
                    
                    <div class="col-md-12">
      	<form method="POST" action="/users/usermanagement" class="Regular shadow">
          <div id="form-group">
          <label>Type:</label>
                        <select class="form-control adduserrole" name="role" required="">
                            <option value="admin">Admin</option>
                            <option value="superadmin">Super Admin</option>
                            <option value="customer" selected="">Customer</option>
                        </select>
                        <span class="form_error">Please Enter Role</span>
            </div>
          <div id="form-group">
            <label>UserName:</label>
            <input class="form-control" name="username" type="text">
          </div>
          <div id="form-group">
            <label>First Name:</label>
            <input class="form-control" name="firtstname" type="text" required>
          </div>
          <div id="form-group">
            <label>Last Name:</label>
            <input class="form-control" name="lastname" type="text" required>
          </div>
          <div id="form-group">
            <label>Email:</label>
            <input class="form-control" name="email" type="text" required>
          </div>
          <div id="form-group">
            <label>Phone Number:</label>
            <input class="form-control" name="phonenumber" type="number" >
          </div>
          <div id="form-group">
            <label>Password:</label>
            <input class="form-control" name="password" type="password" required>
          </div>
          <div id="form-group">
            <label>Confirm:</label>
            <input class="form-control" name="password2" type="password">
          </div>
            <div id="form-group">
            <label>Status:</label>
            <select class="form-control edituserstauts" name="status">
                <option value="inactive">In Active</option>
                <option value="active">Active</option>
            </select>
            </div>
          <br>
          <input class="btn btn-primary" type="submit" value="Submit">
        </form>
    </div>
    </div>        
        </div>
    </div>
   
<!-- /#page-wrapper -->
{{> footer}}